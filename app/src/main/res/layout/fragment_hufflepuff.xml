<?xml version="1.0" encoding="utf-8"?>
<layout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hufflepuff_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/hCrestImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/hufflepuff_crest" />

        <TextView
            android:id="@+id/hTitle"
            style="@style/TitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/hufflepuff_title_text" />

        <TextView
            android:id="@+id/hDescriptionText"
            style="@style/DescriptionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hufflepuff_text" />
    </LinearLayout>
</ScrollView>
</layout>